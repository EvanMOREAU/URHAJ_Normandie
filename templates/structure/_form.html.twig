      .checkbox-wrapper-31 {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 40px;
        margin-right: 15px;
      }
      
      .checkbox-wrapper-31 .background {
        fill: #ccc;
        transition: ease all 0.6s;
