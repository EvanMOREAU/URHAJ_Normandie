<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}URHAJ Normandie{% endblock %}</title>
    <link rel='icon' href='img/icone.ico'>
    
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <style>
            #slideshow {
            width: 100%;
            height: 100vh;
            background-image: url('/img/bg/1.jpeg'); /* Image de départ */
            background-size: cover;
            background-position: left center;
            animation: slide 10s infinite;
            transition: background-position 1s ease-in-out; /* Ajout de la transition */
            }

            @keyframes slide {
            0% { background-position: left center; } /* Position initiale à gauche */
            100% { background-position: right center; } /* Position finale à droite */
            }
        </style>
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <!-- JavaScript de Boostrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
        <script src="/js/evan.js"></script>
    {% endblock %}
</head>
    <body bgcolor="grey">
        <header>
                <nav class="navbar navbar-expand-lg bg-dark fixed-top" data-bs-theme="dark">
                    <div class="container-fluid">
                        <a href="#"><img src="/img/logo.png" width="15%"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Acceuil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">URHAJ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Notre Méthodologie</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Nos actions
                                </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action 1</a></li>
                                <li><a class="dropdown-item" href="#">Action 2</a></li>
                                <li><a class="dropdown-item" href="#">Action 3</a></li>
                                <li><a class="dropdown-item" href="#">Action 4</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link disabled">Disabled</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    | &nbsp; &nbsp; <i class="fa-solid fa-screwdriver-wrench"></i> Administration
                                    </a>

                                    
                                    <ul class="dropdown-menu">
                                    <!--Pages-->
                                        <li><a class="dropdown-item" href="/page"><i class="fa-solid fa-list-ul"></i> Liste des pages </a></li>
                                        <li><a class="dropdown-item" href="/page/new"><i class="fa-solid fa-plus"></i> Nouvelle page</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    <!-- User -->
                                        <li><a class="dropdown-item" href="/user"><i class="fa-solid fa-list-ul"></i> Liste utilisateurs</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-plus"></i> Nouvel utilisateurs</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    <!-- A venir -->
                                        <li><a class="dropdown-item" href="/page"><i class="fa-solid fa-list-ul"></i> {{'Pages list'|trans}}</a></li>
                                        <li><a class="dropdown-item" href="/page/new"><i class="fa-solid fa-plus"></i> {{'New page'|trans}}</a></li>
                                    </ul>
                                </li>
                            {% endif %}
                            </ul>
                            <ul class="navbar-nav align-right mb-2 mb-lg-0 text-white">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Nous contacter</a>
                            </li>
                            {% if app.user %}
                                <a class="nav-link text-white btn btn-danger" aria-current="page" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> {{'Sign out'|trans}} </a>
                            {% endif %}                            
                            </ul>
                        </div>
                    </div>
                </nav>
            </header><br><br>
        {% block body %}
           <div id="slideshow">
            </div>
        {% endblock %}
    </body>
</html>
